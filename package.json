{
  "name": "namesky-sdk",
  "version": "3.2.0",
  "license": "UNLICENSED",
  "description": "NameSky SDK",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "commonjs",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup src --minify --dts",
    "lint": "eslint src/**/*.ts --fix",
    "prettier": "prettier src/**/*.ts --write",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@near-wallet-selector/core": "^8.9.2",
    "bs58": "^5.0.0",
    "buffer": "^6.0.3",
    "multi-transaction": "^7.0.0",
    "near-api-js": "^2.1.4",
    "sha256": "^0.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/sha256": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "tsup": "^6.5.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
